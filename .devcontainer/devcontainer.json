{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "",
    "containerUser": "",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "sailbot_user"
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/src,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-vscode.cpptools",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "ms-iot.vscode-ros",
                "smilerobotics.urdf",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/var/run/docker.sock:/var/run/docker.sock", 
        "-v", "/usr/bin/docker:/usr/bin/docker"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ]
    // "postAttachCommand": "cd src && bash setup.sh && source ~/.bashrc"
    // "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R $(whoami) /home/ws/",
    // "onCreateCommand": "cd src && sudo chmod -R 777 /home/ && bash setup.sh && source ~/.bashrc"
}